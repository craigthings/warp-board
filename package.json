{
  "name": "warp-board",
  "version": "0.1.0",
  "type": "module",
  "description": "A spatial, hierarchical documentation system with markdown boards",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "vite --mode electron"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "mobx": "^6.12.0",
    "mobx-react-lite": "^4.0.5",
    "@linaria/core": "^6.2.0",
    "@linaria/react": "^6.2.1",
    "marked": "^12.0.0",
    "uuid": "^9.0.1",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "@linaria/vite": "^5.0.4",
    "@wyw-in-js/vite": "^0.5.0",
    "@babel/preset-typescript": "^7.23.3",
    "@babel/preset-react": "^7.23.3",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.warpboard.app",
    "productName": "Warp Board",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}

